<div class="review">
  <h4>Review:</h4>
  <p><%= review.description%></p>
  <h4>Rating:</h4>
  <p> <%= review.rating%></p>
  <% if current_user %>
    <% if current_user.id == review.user_id %>
      <%= link_to 'Delete', product_review_path(@product, review),
                method: :delete,
                data: { confirm: 'Are you sure?' },
                class: "btn btn-primary" %>

    <% end %>
  <% end%>
</div>